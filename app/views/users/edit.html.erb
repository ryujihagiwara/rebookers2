<h2>User info</h2>

  <%= form_for(@user) do |f| %>
    
    <div class="field">
      <%= f.label :Name %>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :Image %>
      <%= f.attachment_field :profile_image  %>
    </div>

    <div class="field">
      <%= f.label :introduction %>
      <%= f.text_area :introduction %>
    </div>

    <div class="field">
      <%= f.submit 'Update User' %>
    </div>

  <% end %>

</div>