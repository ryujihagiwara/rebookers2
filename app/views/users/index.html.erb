<div class="container">
  <div class="row">

    <div class="col-xs-3">

      <h2>User info</h2>

      <table class="table">
        <tr>
          <%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
        </tr>

        <tr>
          <td>name</td>
          <td>
            <%= current_user.name %>
          </td>
        </tr>

        <tr>
          <td>introduction</td>
          <td><%= current_user.introduction %></td>
        </tr>
      </table>

      <div class="row">
        <%= link_to '', edit_user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
      </div>

      <h2>New book</h2>

      <%= form_for(@book) do |f| %>

      <div class="row">
        <h4>Title</h4>
        <%= f.text_field :title, class: "col-xs-12" %>
      </div>

      <div class="row">
        <h4>Opinion</h4>
        <%= f.text_area :body, class: "col-xs-12" %>
      </div>

      <div class="actions row">
        <%= f.submit 'Create Book', class: "col-xs-12 btn btn-primary" %>
      </div>

      <% end %>

    </div>



    <div class="col-xs-9">

      <h2>Users</h2>

 	  <table class="table">
 	    <thead>
 	      <tr>
 	        <th>image</th>
 	        <th>name</th>
 	      </tr>
 	    </thead>

 	    <tbody>
 	      <% @users.each do |user| %>
 	      <tr>
 	      	<td>
 	      	  <%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", size: "40x40" %>
 	      	</td>
 	      	<td>
 	      	  <%= user.name %>
 	      	</td>
 	      	<td>
 	      	  <%= link_to 'Show', user_path(user) %>
 	      	</td>
 	      </tr>
 	      <% end %>
 	    </tbody>
 	  </table>

    </div>



  </div>
</div>